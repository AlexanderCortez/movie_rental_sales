{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@entities/*": ["./src/entities/*"],
      "@movie-module/*": ["./src/modules/movie/*"],
      "@app-module/*": ["./src/modules/app/*"],
      "@user-module/*": ["./src/modules/user/*"],
      "@role-module/*": ["./src/modules/role/*"],
      "@sale-module/*": ["./src/modules/sale/*"],
      "@test-factory/*": ["./test/factories/*"],
      "@auth-module/*": ["./src/modules/auth/*"],
      "@rent-module/*": ["./src/modules/rent/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
